<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_400</item>
        <item name="colorPrimaryVariant">@color/orange_400</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_400</item>
        <item name="colorSecondaryVariant">@color/orange_400</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MenuApp.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MenuApp.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MenuApp.LargeComponent</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.MenuApp.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MenuApp.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MenuApp.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MenuApp.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MenuApp.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MenuApp.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MenuApp.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MenuApp.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MenuApp.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MenuApp.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.MenuApp.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MenuApp.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MenuApp.Overline</item>
    </style>

    <style name="AppTheme" parent="Theme.Base">
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>
</resources>